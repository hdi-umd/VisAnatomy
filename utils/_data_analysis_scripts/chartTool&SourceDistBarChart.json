        { "filter": "datum.rank <= 15" }
      ],
      "width": 200,
      "height": 250
    }
  ],
  "resolve": { "scale": { "x": "independent", "y": "independent" } },
  "config": {
    "view": { "stroke": "transparent" },
    "axis": { "domainWidth": 1 }
  }
