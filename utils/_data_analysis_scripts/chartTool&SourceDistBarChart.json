  "hconcat": [
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "Count",
              "type": "quantitative",
              "title": "Number of Charts",
              "axis": {
                "labelFontSize": "14",
                "titleFontSize": "16"
              }
            },
            "y": {
              "field": "Tool",
              "type": "nominal",
              "axis": { "labelAngle": 0 },
              "sort": "-x",
              "title": "Charting Tool",
              "axis": {
                "labelFontSize": "14",
                "titleFontSize": "16"
              }
            },
            "color": { "value": "#1f77b4" }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "dx": 0,
            "color": "white",
            "size": "14"
          },
          "encoding": {
            "x": { "field": "Count", "type": "quantitative" },
            "y": { "field": "Tool", "type": "nominal", "sort": "-x" },
            "text": { "field": "Count", "type": "quantitative" }
          }
        }
      ],
      "transform": [
        { "filter": "datum.Type === 'Chart Tool'" },
        { "window": [{ "op": "rank", "as": "rank" }] },
        { "filter": "datum.rank <= 15" }
      ],
      "width": 200,
      "height": 250
    },
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "Count",
              "type": "quantitative",
              "title": "Number of Charts",
              "axis": {
                "labelFontSize": "14",
                "titleFontSize": "16"
              }
            },
            "y": {
              "field": "Source",
              "type": "nominal",
              "axis": { "labelAngle": 0 },
              "sort": "-x",
              "title": "Chart Source",
              "axis": {
                "labelFontSize": "14",
                "titleFontSize": "16"
              }
            },
            "color": { "value": "#ff7f0e" }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "dx": 0,
            "color": "white",
            "size": "14"
          },
          "encoding": {
            "x": { "field": "Count", "type": "quantitative" },
            "y": { "field": "Source", "type": "nominal", "sort": "-x" },
            "text": { "field": "Count", "type": "quantitative" }
          }
        }
