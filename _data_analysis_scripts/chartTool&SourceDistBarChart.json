    ]
  },
  "hconcat": [
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "Count",
              "type": "quantitative",
              "title": "Number of Charts"
            },
            "y": {
              "field": "Tool",
              "type": "nominal",
              "axis": { "labelAngle": 0 },
              "sort": "-x",
              "title": "Charting Tool"
            },
            "color": { "value": "#1f77b4" }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "dx": -1,
            "color": "white"
          },
          "encoding": {
            "x": { "field": "Count", "type": "quantitative" },
            "y": { "field": "Tool", "type": "nominal", "sort": "-x" },
            "text": { "field": "Count", "type": "quantitative" }
          }
        }
      ],
      "transform": [
        { "filter": "datum.Type === 'Chart Tool'" },
        { "window": [{ "op": "rank", "as": "rank" }] },
        { "filter": "datum.rank <= 15" }
      ]
    },
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "Count",
              "type": "quantitative",
              "title": "Number of Charts"
            },
            "y": {
              "field": "Source",
              "type": "nominal",
              "axis": { "labelAngle": 0 },
              "sort": "-x",
              "title": "Chart Source"
            },
            "color": { "value": "#ff7f0e" }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "dx": -1,
            "color": "white"
          },
          "encoding": {
            "x": { "field": "Count", "type": "quantitative" },
            "y": { "field": "Source", "type": "nominal", "sort": "-x" },
            "text": { "field": "Count", "type": "quantitative" }
          }
        }
      ],
      "transform": [
        { "filter": "datum.Type === 'Chart Source'" },
        { "window": [{ "op": "rank", "as": "rank" }] },
        { "filter": "datum.rank <= 15" }
      ]
    }
  ],
  "resolve": { "scale": { "x": "independent", "y": "independent" } },
  "config": {
    "view": { "stroke": "transparent" },
    "axis": { "domainWidth": 1 }
  }
}
