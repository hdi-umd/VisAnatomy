      { "Source": "datavizcatalogue.com", "Count": 8, "Type": "Chart Source" },
      { "Source": "commons.wikimedia.org", "Count": 8, "Type": "Chart Source" },
      { "Source": "Observable.com", "Count": 6, "Type": "Chart Source" },
      { "Source": "bookdown.org", "Count": 5, "Type": "Chart Source" },
      { "Source": "gist.github.com", "Count": 5, "Type": "Chart Source" },
